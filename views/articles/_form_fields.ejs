<div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class="form-control" value="<%= article.title %>" required>
</div>
<br>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" row="4" col="4" id="description"
        class="form-control"><%= article.description %></textarea>
</div>
<br>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control" required><%= article.markdown %></textarea>
</div>
<br>
<a href="/" class="btn btn-danger">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>