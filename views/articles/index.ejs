<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.1/css/all.css" crossorigin="anonymous">


    <style>
        body {
            background-color: whitesmoke;
        }


        .dropdown-menu {
            background-color: #343a40;
        }

        .dropdown-item:hover {
            background-color: gray;
        }

        .dropdown-item {
            padding-bottom: .5em;
            padding-top: .5em;
        }
    </style>

</head>

<body>


    <div class="container-fluid text-center bg-dark">
        <h1 class="py-4 text-white">Blogs Platform</h1>
    </div>

    <br>
    <div class="container">
        <div class="container d-flex justify-content-between align-items-center">
            <h1>All Articles</h1>

            <div class="justify-content-end">
                <a href="/articles/new" class="btn btn-dark btn-circle m-1"><i class="fa fa-plus" id="circle"></i></a>
            </div>

        </div>

        <br>
        <br>
        <% articles.forEach(article=> { %>

            <div class="col card text-white bg-dark">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="text-truncate">
                        <%= article.title %>
                    </h4>
                    <div class="dropright float-end">
                        <button type="button" class="btn btn-dark" id="options" data-bs-toggle="dropdown"
                            aria-expanded="false"><i class="fas fa-ellipsis-v"></i></button>
                        <ul class="dropdown-menu">
                            <li><a href="articles/<%= article.slug %>" class="btn dropdown-item text-white"><span
                                        class="text-gradient"><i class="fas fa-book-reader"></i></span>&nbsp; Read
                                    More</a>
                            </li>
                            <li><a href="/articles/edit/<%= article.id %>" class="btn dropdown-item text-white"><span
                                        class="text-gradient"><i class="fas fa-pencil-alt"></i></span>&nbsp; Edit</a>
                            </li>
                            <li>
                                <form action="/articles/<%=article.id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button class="dropdown-item text-white" type="submit"><i
                                            class="fas fa-trash-alt"></i>&nbsp; Delete</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="text-truncate">
                    &nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-calendar-week"></i>
                    Date: <%= article.createdAt.toLocaleDateString() %>
                </div>
                <br>
                <div class="card-text mb-2 text-white">
                    &nbsp;&nbsp; &nbsp;&nbsp;<%= article.description %>
                </div>
                <br>
            </div>
            <br>
            <% }) %>
    </div>



    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
        crossorigin="anonymous"></script>

</body>

</html>